@model Team_27_FinalProject.Models.Order

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderSubtotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderSubtotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesTax)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesTax)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderTotal)
            </dd>
        </dl>
</div>

<table class="table table-primary">
    <tr>
        <th>Property Street</th>
        <th>Property Zip</th>
        <th>Property State</th>
        <th>Number of Guests</th>
        <th>Stay Price </th>
        <th>Cleaning Price</th>
        <th>Discount (if applicable)</th>
        <th>Reservation Subtotal</th>
        <th>Reservation Total</th>
    </tr>
    @foreach (Reservation rd in Model.Reservations)
    {
    <tr>
        <td>@Html.DisplayFor(ModelItem => rd.Property.Street)</td>
        <td>@Html.DisplayFor(ModelItem => rd.Property.Zip)</td>
        <td>@Html.DisplayFor(ModelItem => rd.Property.State)</td>
        <td>@Html.DisplayFor(ModelItem => rd.NumberOfGuests)</td>
        <td>@Html.DisplayFor(ModelItem => rd.StayPrice)</td>
        <td>@Html.DisplayFor(ModelItem => rd.CleaningPrice)</td>
        <td>@Html.DisplayFor(ModelItem => rd.Discount)</td>
        <td>@Html.DisplayFor(ModelItem => rd.Subtotal)</td>
        <td>@Html.DisplayFor(ModelItem => rd.ReservationTotal)</td>
    </tr>
    }
</table>



<div>
    <a asp-action="Create" asp-controller="Orders">Add New Reservation</a>
</div>
