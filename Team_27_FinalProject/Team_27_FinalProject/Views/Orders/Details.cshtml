@model Team_27_FinalProject.Models.Order

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">

        <!-- Customer Email -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Email)
        </dd>

        <!-- Order Number -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>

        <!-- Order Date -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <!-- Order Status -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OStatus)
        </dd>

    </dl>
</div>

<!-- Display Order Details -->
<h5>Products on this Order</h5>
<table class="table table-primary">
    <tr>
        <th>Property Street</th>
        <th>Property Zip</th>
        <th>Property State</th>
        <th>Weekday Fee</th>
        <th>Weekend Fee</th>
        <th>Number of Nights</th>
        <th>Reservation Subtotal</th>
    </tr>
    @foreach (Reservation rd in Model.Reservations)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem => rd.Property.Street)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Property.Zip)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Property.State)</td>
            <td>@Html.DisplayFor(ModelItem => rd.WeekdayFee)</td>
            <td>@Html.DisplayFor(ModelItem => rd.WeekendFee)</td>
            <td>@Html.DisplayFor(ModelItem => rd.NumberOfNights)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Subtotal)</td>
        </tr>
    }
</table>

<!-- Order Summary -->
<h5>Order Summary</h5>
<table class="table table-sm table-bordered" style="width:30%">
    <tr>
        <th colspan="2" style="text-align:center">Order Summary</th>
    </tr>
    <tr>
        <td>Order subtotal:</td>
        <td>@Html.DisplayFor(model => model.OrderSubtotal)</td>
    </tr>
    <tr>
        <td>Sales tax:</td>
        <td>@Html.DisplayFor(model => model.SalesTax)</td>
    </tr>
    <tr>
        <td>Order total:</td>
        <td>@Html.DisplayFor(model => model.OrderTotal)</td>
    </tr>

</table>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
