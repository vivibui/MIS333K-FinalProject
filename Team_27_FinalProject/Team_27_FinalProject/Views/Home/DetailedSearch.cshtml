@model Team_27_FinalProject.Models.SearchViewModel

@{
    ViewData["Title"] = "DetailedSearch";
}
<br /> 
<h1>Detailed Search</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedCategoryID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedCategoryID, (SelectList)ViewBag.AllCategories, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SelectedCity" class="control-label"></label>
                <input asp-for="SelectedCity" class="form-control" />
                <span asp-validation-for="SelectedCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedState" class="control-label"></label>
                <input asp-for="SelectedState" class="form-control" />
                <span asp-validation-for="SelectedState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCheckin" class="control-label"></label>
                <input asp-for="SelectedCheckin" class="form-control" />
                <span asp-validation-for="SelectedCheckin" class="text-danger"></span>
                <dl class="text-danger">
                    @Html.ValidationMessage("Past Date")
                    @Html.ValidationMessage("Less Than")
                </dl>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCheckout" class="control-label"></label>
                <input asp-for="SelectedCheckout" class="form-control" />
                <span asp-validation-for="SelectedCheckout" class="text-danger"></span>
            </div>
            <label asp-for="RatingType" class="control-label"></label><br />
            <input type="radio" class="radio" asp-for="RatingType" value="@RatingType.LessThan" checked="checked" /> Less Than
            <input type="radio" class="radio" asp-for="RatingType" value="@RatingType.GreaterThan" /> Greater Than
            <div class="form-group">
                <label asp-for="SelectedRating" class="control-label"></label>
                <input asp-for="SelectedRating" class="form-control" />
                <span asp-validation-for="SelectedRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedGuests" class="control-label"></label>
                <input asp-for="SelectedGuests" class="form-control" />
                <span asp-validation-for="SelectedGuests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedWeekdayPrice" class="control-label"></label>
                <input asp-for="SelectedWeekdayPrice" class="form-control" />
                <span asp-validation-for="SelectedWeekdayPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedWeekendPrice" class="control-label"></label>
                <input asp-for="SelectedWeekendPrice" class="form-control" />
                <span asp-validation-for="SelectedWeekendPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedBothPrices" class="control-label"></label>
                <input asp-for="SelectedBothPrices" class="form-control" />
                <span asp-validation-for="SelectedBothPrices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedBedrooms" class="control-label"></label>
                <input asp-for="SelectedBedrooms" class="form-control" />
                <span asp-validation-for="SelectedBedrooms" class="text-danger"></span>
            </div>
            Or Search by Range of Bedrooms
            <div class="form-group">
                <label asp-for="SelectedMinBedrooms" class="control-label"></label>
                <input asp-for="SelectedMinBedrooms" class="form-control" />
                <span asp-validation-for="SelectedMinBedrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedMaxBedrooms" class="control-label"></label>
                <input asp-for="SelectedMaxBedrooms" class="form-control" />
                <span asp-validation-for="SelectedMaxBedrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedBathrooms" class="control-label"></label>
                <input asp-for="SelectedBathrooms" class="form-control" />
                <span asp-validation-for="SelectedBathrooms" class="text-danger"></span>
            </div>
            Or Search by Range of Bathrooms
            <div class="form-group">
                <label asp-for="SelectedMinBathrooms" class="control-label"></label>
                <input asp-for="SelectedMinBathrooms" class="form-control" />
                <span asp-validation-for="SelectedMinBathrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedMaxBathrooms" class="control-label"></label>
                <input asp-for="SelectedMaxBathrooms" class="form-control" />
                <span asp-validation-for="SelectedMaxBathrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.SelectedPets)
                    <input class="form-check-input" asp-for="SelectedPets" />
                </label>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.SelectedParking)
                    <input class="form-check-input" asp-for="SelectedParking" />
                </label>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

